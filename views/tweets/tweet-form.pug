extends ../layout.pug

block content
    div(class="d-flex flex-row content mx-auto")
        div(class="profile-container")
            include ../includes/profile.pug
        div(class="flex-fill") Cr√©ation du tweet
            form(class="card" method="post" action="/tweets")
                div(class="card-header") Ecrire un titre
                div(class="card-body")
                    div(class="form-group")
                        textarea(class="form-control" name="content" rows="5" placeholder="Racontez nous les nouvelles !!!" )
                    if errors
                        ul(class="my-2")
                            each error in errors
                                li(class="text-danger")= error
                    div(class="w-100")
                        input(type="submit" value="Envoyer" class="btn btn-primary ml-auto d-block")